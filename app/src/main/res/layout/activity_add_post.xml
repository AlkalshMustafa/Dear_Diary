<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrayColor"
    android:padding="15dp"
    tools:context=".Activities.AddPostActivity">

    <ImageButton
        android:id="@+id/addPostImgID"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:background="@mipmap/add_btn"
        android:padding="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <EditText
        android:id="@+id/addPostTitleID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/input_outline"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/addPostImgID"
        app:layout_constraintVertical_bias="0.072" />

    <EditText
        android:id="@+id/addPostDescID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:autofillHints=""
        android:background="@drawable/input_outline"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/PosrDescription"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPostTitleID"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:id="@+id/addPostBtnID"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/PostBtn"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPostDescID" />
</androidx.constraintlayout.widget.ConstraintLayout>